{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "esnext",
    "jsx": "preserve",
    "strict": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": { "components/*": ["components/*"], "lib/*": ["lib/*"], "styles/*": ["styles/*"], "types/*": ["types/*"] }
  },
  "exclude": ["node_modules", "cypress"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./*.js", "./.*.js", "test/__mocks__/*.js"]
}
